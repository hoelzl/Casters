{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "tsconfig.json"
  ]
}
